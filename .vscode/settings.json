{
  "[javascript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "search.exclude": {
    "**/.yarn": true,
    "**/.pnp.*": true
  },
  "typescript.tsdk": ".yarn/sdks/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "prettier.prettierPath": ".yarn/sdks/prettier/index.cjs",
  "terminal.integrated.defaultProfile.windows": "Command Prompt", // π’΅jest runner μ‹¤ν–‰μ‹ Git-Bashμ™€λ” νΈν™μ΄ μ•λλ‹¤.
  "jestrunner.jestCommand": "yarn cross-env NODE_OPTIONS=\"--experimental-vm-modules --no-deprecation --disable-warning=ExperimentalWarning\" yarn jest",
  "jestrunner.enableYarnPnpSupport": true,
  "code-runner.executorMap": {
    "javascript": "node",
    "typescript": "yarn cross-env NODE_OPTIONS=\"--no-deprecation --disable-warning=ExperimentalWarning\" yarn ts-node-esm" // π’΅ts-node-esm μ‹¤ν–‰μ€ node v23 ν™κ²½μ—μ„ μ •μƒ λ™μ‘ν–λ‹¤.
  },
  "code-runner.clearPreviousOutput": true
