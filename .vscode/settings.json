{
  "[javascript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "code-runner.executorMap": {
    "javascript": "node",
    "typescript": "pnpm cross-env NODE_OPTIONS=\"--no-deprecation --disable-warning=ExperimentalWarning\" pnpm ts-node-esm" // 💡ts-node-esm 실행은 node v23 환경에서 정상 동작했다.
  },
  "code-runner.clearPreviousOutput": true
}
