{
  "[javascript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "search.exclude": {
    "**/.yarn": true,
    "**/.pnp.*": true
  },
  "typescript.tsdk": ".yarn/sdks/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "prettier.prettierPath": ".yarn/sdks/prettier/index.cjs",
  "jestrunner.jestCommand": "yarn jest",
  "jestrunner.enableYarnPnpSupport": true,
  "terminal.integrated.defaultProfile.windows": "Command Prompt",
  "jestrunner.debugOptions": {
    "runtimeExecutable": "yarn",
    "runtimeArgs": [
      "jest",
      "${fileBasename}",
      "--runInBand",
      "--no-cache",
      "--watchAll=false",
      "--color"
    ]
  },
  "code-runner.executorMap": {
    "javascript": "node",
    "typescript": "yarn cross-env NODE_OPTIONS=\"--no-deprecation --disable-warning=ExperimentalWarning\" yarn ts-node-esm" // ğŸ’¡ts-node-esm ì‹¤í–‰ì€ node v23 í™˜ê²½ì—ì„œ ì •ìƒ ë™ì‘í–ˆë‹¤.
  },
  "code-runner.clearPreviousOutput": true
}
